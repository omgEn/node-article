<head>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include('banner', {username: username}) %>
  
  <div class="article">
  	<form action="/article/create" method="post">
      <input type="hidden" name="id" value="<%= article._id %>">
  		<input type="text" name="title" placeholder="请输入文章标题" value="<%= article.title %>">
  		<textarea name="content" class="xheditor"><%- article.content %></textarea>
  		<% if(article._id) { %>
        <input type="submit" value="修改">
      <% } else { %>
        <input type="submit" value="发布">
      <% } %>
  	</form>
  </div>

  <script type="text/javascript" src="/xheditor/jquery/jquery-1.4.4.min.js"></script>
  <script type="text/javascript" src="/xheditor/xheditor-1.2.2.min.js"></script>
  <script type="text/javascript" src="/xheditor/xheditor_lang/zh-cn.js"></script>
  <script>
      $('.xheditor').xheditor({
        tools: 'full',
        skin: 'default',
        upImgUrl: '/upload/img',  // 指定文件上传的接口
        html5Upload: false,
        upMultiple: 1    // 每次允许一张图片上传
      });
  </script>
</body>
